# Staging Environment Configuration

# Environment
ENVIRONMENT=staging
LOG_LEVEL=debug
BUILD_VERSION=staging

# Database Configuration
POSTGRES_DB=panchangam_staging
POSTGRES_USER=panchangam
POSTGRES_PASSWORD=staging_password
DB_HOST=postgres
DB_PORT=5432

# Redis Configuration
REDIS_PASSWORD=staging_password
REDIS_HOST=redis
REDIS_PORT=6379

# API Configuration
VITE_API_BASE_URL=https://api-staging.panchangam.app
CORS_ALLOWED_ORIGINS=https://staging.panchangam.app

# Grafana Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=staging_admin
GRAFANA_ROOT_URL=https://monitoring-staging.panchangam.app

# Backup Configuration
BACKUP_SCHEDULE=0 3 * * *
BACKUP_RETENTION_DAYS=14
