# Production environment configuration
# VITE_API_BASE_URL is intentionally NOT set so that the app uses
# window.location.origin at runtime. This allows the same build to
# work at any domain (nginx proxies /api/ to the backend gateway).

# API Configuration
VITE_API_TIMEOUT=30000
VITE_API_RETRY_COUNT=3

# Debug settings (disabled in production)
VITE_DEBUG_API=false