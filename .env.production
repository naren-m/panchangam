# API Configuration
VITE_API_BASE_URL=https://api.panchangam.app
CORS_ALLOWED_ORIGINS=https://panchangam.app,https://www.panchangam.app

# Grafana Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_ME_IN_PRODUCTION
